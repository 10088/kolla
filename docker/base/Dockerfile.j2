    && yum clean all

    # Endif for install_type binary
    {% elif install_type == 'source' %}

# Update packages
RUN yum update -y \
    && yum install -y \
        epel-release \
        gcc \
        gcc-c++ \
        git \
        libffi-devel \
        libxml2-devel \
        libxslt-devel \
        mariadb-devel \
        mysql-devel \
        openldap-devel \
